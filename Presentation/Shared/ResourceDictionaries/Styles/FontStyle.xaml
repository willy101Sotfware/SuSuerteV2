<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!--  Timer Style  -->
    <Style x:Key="TimerStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#fff" />
        <Setter Property="FontSize" Value="35" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="IsHitTestVisible" Value="False" />
        <Setter Property="Visibility" Value="Visible" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Margin" Value="843,249,53,1607" />

    </Style>

    <!--  Title Style  -->
    <Style x:Key="TitleStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource QUATERNARYCOLOR}" />
        <Setter Property="FontSize" Value="50" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="IsHitTestVisible" Value="False" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>


    <!--  Title Night Style  -->
    <Style x:Key="TitleNightStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource QUATERNARYCOLOR}" />
        <Setter Property="FontSize" Value="80" />
        <Setter Property="IsHitTestVisible" Value="False" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <!--  Common text Style  -->
    <Style x:Key="CommonTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="#777" />
        <Setter Property="FontSize" Value="25" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="IsHitTestVisible" Value="False" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <!--  Common text Style  -->
    <Style x:Key="CommonTextStyle2" TargetType="TextBox">
        <Setter Property="Foreground" Value="#777" />
        <Setter Property="FontSize" Value="25" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="IsHitTestVisible" Value="False" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <!--  Status text Style  -->
    <Style x:Key="StatusTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource ERRORCOLOR}" />
        <Setter Property="FontSize" Value="35" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="IsHitTestVisible" Value="False" />
        <Setter Property="Visibility" Value="Visible" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Width" Value="600" />
        <Setter Property="Height" Value="80" />

    </Style>

    <!--  Button text Style  -->
    <Style x:Key="ButtonTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource QUATERNARYCOLOR}" />
        <Setter Property="FontSize" Value="45" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="IsHitTestVisible" Value="False" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />

    </Style>

    <!--  Keyboard textBox Style  -->
    <Style x:Key="KeyboardTextBoxStyle" TargetType="TextBox">
        <Setter Property="Foreground" Value="{StaticResource QUATERNARYCOLOR}" />
        <Setter Property="BorderBrush" Value="#0f0f" />
        <Setter Property="FontSize" Value="60" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="IsHitTestVisible" Value="False" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />

    </Style>

    <!--  Keyboard textBox Style  -->
    <Style x:Key="KeyboardTextBoxStyle2" TargetType="TextBox">
        <Setter Property="Foreground" Value="{StaticResource TERTIARYCOLOR}" />
        <Setter Property="BorderBrush" Value="#0f0f" />
        <Setter Property="FontSize" Value="60" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="IsHitTestVisible" Value="False" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />

    </Style>

    <!--  ViewBox Text Style  -->
    <Style x:Key="ViewBoxTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="35" />
        <Setter Property="IsHitTestVisible" Value="False" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Left" />

    </Style>

    <!--  Finish Text Style  -->
    <Style x:Key="FinishTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TERTIARYCOLOR}" />
        <Setter Property="FontSize" Value="80" />
        <Setter Property="IsHitTestVisible" Value="False" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="FontWeight" Value="DemiBold" />
    </Style>

    <!--  Message Text Style  -->
    <Style x:Key="MessageTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White" />
        <!--  Resto de propiedades permanecen igual  -->
        <Setter Property="FontSize" Value="40" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="FontWeight" Value="Thin" />
    </Style>
</ResourceDictionary>