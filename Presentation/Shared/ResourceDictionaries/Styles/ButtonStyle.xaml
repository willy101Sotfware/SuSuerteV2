<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!--  Button External Style  -->
    <Style x:Key="ButtonExternalStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource PRIMARYCOLOR}" />
        <Setter Property="Width" Value="120" />
        <Setter Property="Height" Value="120" />
        <Setter Property="CornerRadius" Value="60" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Cursor" Value="Hand" />

    </Style>

    <!--  Button Internal Style  -->
    <Style x:Key="ButtonInternalStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource QUATERNARYCOLOR}" />
        <Setter Property="Width" Value="90" />
        <Setter Property="Height" Value="90" />
        <Setter Property="CornerRadius" Value="60" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />

    </Style>


</ResourceDictionary>