<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SuSuerteV2.UserControls" 
                    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro">
    <!-- Icon Keyboard Style-->
    <Style x:Key="BasicImageStyle" TargetType="Image">
        <Setter Property="Width" Value="500"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Visibility" Value="Visible"/>
    </Style>

    <Style x:Key="GifViewerStyle" TargetType="local:GifViewer">
        <Setter Property="Height" Value="1150"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="FooterIcon" TargetType="Image">
        <Setter Property="Width" Value="300"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Visibility" Value="Visible"/>
        <Setter Property="Margin" Value="0,1790,0,0" />
    </Style>

    <Style x:Key="ProgressRingStyle" TargetType="mah:ProgressRing">
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Foreground" Value="{StaticResource TERTIARYCOLOR}"/>
        <Setter Property="Visibility" Value="Visible"/>
        <Setter Property="IsActive" Value="True"/>
    </Style>
</ResourceDictionary>