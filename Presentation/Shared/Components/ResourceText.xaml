<UserControl
    x:Class="SuSuerteV2.UserControls.ResourceText"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SuSuerteV2.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d">

    <Viewbox Width="auto" Stretch="Uniform">

        <Grid Width="700" Height="250">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <ContentPresenter
                Grid.Column="1"
                Width="150"
                Height="150"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="{Binding Resource, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:ResourceText}}}" />
            <TextBlock
                Grid.Column="2"
                Grid.ColumnSpan="3"
                Width="380"
                Foreground="{Binding ForegroundText, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:ResourceText}}}"
                Style="{StaticResource ButtonTextStyle}"
                Text="{Binding Title, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:ResourceText}}}" />
        </Grid>
    </Viewbox>


</UserControl>
