<UserControl
    x:Class="SuSuerteV2.UserControls.NumericKeyboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SuSuerteV2.UserControls.ClassDiffrenceTextBox"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d">
    <Viewbox Width="auto" Stretch="Uniform">
        <md:Card
            Width="400"
            Height="500"
            md:ElevationAssist.Elevation="Dp24"
            UniformCornerRadius="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Image
                    Grid.Row="0"
                    Grid.Column="0"
                    Cursor="Hand"
                    MouseDown="Keyboard_MouseDown"
                    Source="{StaticResource 1}"
                    Tag="1" />

                <Image
                    Grid.Row="0"
                    Grid.Column="1"
                    Cursor="Hand"
                    MouseDown="Keyboard_MouseDown"
                    Source="{StaticResource 2}"
                    Tag="2" />

                <Image
                    Grid.Row="0"
                    Grid.Column="2"
                    Cursor="Hand"
                    MouseDown="Keyboard_MouseDown"
                    Source="{StaticResource 3}"
                    Tag="3" />

                <Image
                    Grid.Row="1"
                    Grid.Column="0"
                    Cursor="Hand"
                    MouseDown="Keyboard_MouseDown"
                    Source="{StaticResource 4}"
                    Tag="4" />

                <Image
                    Grid.Row="1"
                    Grid.Column="1"
                    Cursor="Hand"
                    MouseDown="Keyboard_MouseDown"
                    Source="{StaticResource 5}"
                    Tag="5" />

                <Image
                    Grid.Row="1"
                    Grid.Column="2"
                    Cursor="Hand"
                    MouseDown="Keyboard_MouseDown"
                    Source="{StaticResource 6}"
                    Tag="6" />

                <Image
                    Grid.Row="2"
                    Grid.Column="0"
                    Cursor="Hand"
                    MouseDown="Keyboard_MouseDown"
                    Source="{StaticResource 7}"
                    Tag="7" />

                <Image
                    Grid.Row="2"
                    Grid.Column="1"
                    Cursor="Hand"
                    MouseDown="Keyboard_MouseDown"
                    Source="{StaticResource 8}"
                    Tag="8" />

                <Image
                    Grid.Row="2"
                    Grid.Column="2"
                    Cursor="Hand"
                    MouseDown="Keyboard_MouseDown"
                    Source="{StaticResource 9}"
                    Tag="9" />

                <Image
                    Grid.Row="3"
                    Grid.Column="1"
                    Cursor="Hand"
                    MouseDown="Keyboard_MouseDown"
                    Source="{StaticResource 0}"
                    Tag="0" />

                <Image
                    Grid.Row="3"
                    Grid.Column="2"
                    Cursor="Hand"
                    MouseDown="Keyboard_MouseDown"
                    Source="{StaticResource LIMPIAR}"
                    Tag="Remove" />




                <Border
                    Grid.Row="3"
                    Grid.Column="0"
                    MouseDown="Keyboard_MouseDown"
                    Style="{StaticResource ButtonExternalStyle}"
                    Tag="Clear"
                    Visibility="Hidden">
                    <Border Style="{StaticResource ButtonInternalStyle}">
                        <TextBlock Style="{StaticResource TitleStyle}" Text="X" />
                    </Border>
                </Border>


            </Grid>
        </md:Card>

    </Viewbox>

</UserControl>
