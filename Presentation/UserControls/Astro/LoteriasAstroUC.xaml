<local:AppUserControl
    x:Class="SuSuerteV2.Presentation.UserControls.Astro.LoteriasAstroUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SuSuerteV2.UserControls"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="1920"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <Viewbox Stretch="Uniform">
        <Grid Width="1080" Height="1920">
            <Grid.Background>
                <ImageBrush ImageSource="/Images/Backgrounds/BgSuSuerte.png" />
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="500" />
                <RowDefinition Height="*" />
                <RowDefinition Height="400" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">

                <Grid Margin="10,0,842,303" TouchDown="Btn_AtrasTouchDown">
                    <Image
                        Width="109"
                        Height="105"
                        Margin="64,40,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Source="/Images/Buttons/btn_atrasBetplay.png" />

                    <Image
                        Width="109"
                        Height="105"
                        Margin="64,150,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Source="/Images/Others/txt_atras.png" />

                </Grid>



                <TextBlock
                    x:Name="tbTimer"
                    Width="89"
                    Height="53"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    FontSize="35"
                    Foreground="White" />

            </Grid>

            <Grid
                Grid.Row="1"
                Grid.RowSpan="2"
                Margin="10,5,-10,395">



                <Image
                    Width="532"
                    Height="105"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Source="/Images/Others/txt_selecciona_loteria.png" />

                <Image
                    x:Name="Sol"
                    Width="236"
                    Height="319"
                    Margin="224,200,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="/Images/Buttons/loteria_astro_sol.png"
                    Tag="Sol"
                    TouchDown="SeleccionarOpcion" />

                <TextBox
                    x:Name="loteriasol"
                    Margin="190,524,586,370"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    FontSize="30"
                    Foreground="Red"
                    IsEnabled="false"
                    IsReadOnly="True"
                    Text="Esta lotería se encuentra cerrada en este momento"
                    TextAlignment="Center"
                    TextWrapping="Wrap"
                    Visibility="Hidden" />

                <Image
                    x:Name="Luna"
                    Width="236"
                    Height="356"
                    Margin="602,200,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="/Images/Buttons/loteria_astro_luna.png"
                    Tag="Luna"
                    TouchDown="SeleccionarOpcion" />


                <TextBox
                    x:Name="loteriaLuna"
                    Margin="568,524,208,334"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    FontSize="30"
                    Foreground="Red"
                    IsEnabled="True"
                    IsReadOnly="True"
                    Text="Esta lotería se encuentra cerrada en este momento"
                    TextAlignment="Center"
                    TextWrapping="Wrap"
                    Visibility="Hidden" />

            </Grid>

            <Grid Grid.Row="2">



                <Image
                    Width="710"
                    Height="114"
                    Margin="0,247,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Source="/Images/Others/ico_atencion_cliente.png" />
            </Grid>
        </Grid>
    </Viewbox>
</local:AppUserControl>
