<local:AppUserControl
    x:Class="SuSuerteV2.Presentation.UserControls.ElectronicInvoiceUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SuSuerteV2.UserControls"
    xmlns:local2="clr-namespace:SuSuerteV2.UserControls.ClassDiffrenceTextBox"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="1920"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <Viewbox Stretch="Uniform">
        <Grid Width="1080" Height="1920">
            <Grid.Background>
                <ImageBrush ImageSource="/Images/Backgrounds/bgGray.png" />
            </Grid.Background>



            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="3.5*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">



                <TextBlock
                    x:Name="tbTimer"
                    Width="126"
                    Height="60"
                    Margin="477,10,477,279"
                    FontSize="45"
                    Foreground="White" />

            </Grid>
            <Border
                Grid.Row="1"
                Margin="120,0"
                Background="#fff"
                CornerRadius="25">
                <Grid>

                    <TextBlock
                        Width="554"
                        Height="298"
                        Margin="0,133,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        FontSize="50"
                        FontWeight="SemiBold"
                        Foreground="Black"
                        Text="Ingresa tu correo electrónico para el envío del comprobante"
                        TextAlignment="Center"
                        TextWrapping="Wrap" />

                    <Border
                        Margin="32,436,38,656"
                        Background="#dcdcdc"
                        CornerRadius="30">
                        <Grid>
                            <Label
                                Margin="35,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Content="Correo electrónico"
                                FontSize="45"
                                Foreground="#999"
                                IsHitTestVisible="False" />
                            <local2:EmailTextbox
                                x:Name="Mail"
                                Height="70"
                                Margin="10,0,10,0"
                                VerticalAlignment="Center"
                                Background="#0f0f"
                                BorderThickness="0"
                                FontSize="45"
                                Foreground="#999"
                                GotFocus="OnFocus"
                                IsReadOnly="True"
                                LostFocus="OnLostFocus"
                                Text=""
                                TextAlignment="Center"
                                TextChanged="Input_changed"
                                TextWrapping="Wrap" />
                        </Grid>
                    </Border>

                    <Image
                        x:Name="ContinueButtons"
                        Width="378"
                        Height="138"
                        Margin="0,986,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Source="/Images/Buttons/BtnContinuar.png"
                        TouchDown="ContinueButton" />

                    <!--<Image Source="/Images/Buttons/BtnCancelar.png"
                    HorizontalAlignment="Left"
                    TouchDown="CancelButton"
                    VerticalAlignment="Bottom" Height="98" Width="303" Margin="60,0,0,60" />-->
                </Grid>
            </Border>

            <Grid Grid.Row="2">
                <Image
                    Width="662"
                    Height="130"
                    Margin="0,154,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Source="/Images/Others/imgInfo.png" />

                <Image
                    Width="75"
                    Height="50"
                    Margin="0,0,50,50"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Source="/Images/Others/LogoEcity.png" />
            </Grid>

        </Grid>
    </Viewbox>
</local:AppUserControl>
