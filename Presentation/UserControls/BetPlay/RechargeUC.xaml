<local:AppUserControl
    x:Class="SuSuerteV2.Presentation.UserControls.BetPlay.RechargeUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SuSuerteV2.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="1920"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <Viewbox Stretch="Uniform">
        <Grid Width="1080" Height="1920">
            <Grid.Background>
                <ImageBrush ImageSource="{StaticResource FONDO}" Stretch="Uniform" />
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="500" />
                <RowDefinition Height="*" />
                <RowDefinition Height="400" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">


                <TextBlock
                    x:Name="tbTimer"
                    Width="87"
                    Height="56"
                    Margin="0,10,10,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    FontSize="35"
                    Foreground="White" />


                <StackPanel
                    Name="btnAtras"
                    Margin="10,0,842,303"
                    MouseDown="UIElement_Interaction">
                    <Image
                        Width="109"
                        Height="105"
                        Margin="64,40,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Source="{StaticResource BtnAtrasBetplay}" />

                    <TextBlock
                        Margin="0,5,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="Atrás" />
                </StackPanel>


                <Image
                    Width="290"
                    Height="112"
                    Margin="0,282,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Source="/Images/Others/LogoBetPlay.png" />

                <Image
                    Width="612"
                    Height="47"
                    Margin="0,446,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Source="/Images/Others/txt_ingresa_valor_recarga.png" />



            </Grid>

            <Grid
                Grid.Row="1"
                Grid.RowSpan="2"
                Margin="10,5,-10,395">

                <Image
                    Width="390"
                    Height="73"
                    Margin="347,15,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="/Images/Others/txt_apuesta_minima.png"
                    Visibility="Visible" />



                <Image
                    Width="226"
                    Height="95"
                    Margin="429,65,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="/Images/Others/txt_dos_mil.png" />

                <Image
                    Width="532"
                    Height="47"
                    Margin="268,168,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="/Images/Others/linea_yellow_division.png" />



                <Image
                    Width="388"
                    Height="47"
                    Margin="0,204,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Source="/Images/Others/txt_valor_recarga.png" />

                <Image
                    Width="371"
                    Height="38"
                    Margin="377,208,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="/Images/Others/txtingrese.png"
                    Visibility="Hidden" />

                <!--  TECLADO NUMÉRICO  -->
                <Image
                    Name="btn0"
                    Width="112"
                    Height="112"
                    Margin="0,750,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    MouseDown="UIElement_Interaction"
                    Source="/Images/Keyboard/keyboardBetplay/btn_0.png"
                    Tag="0" />

                <Image
                    Name="btn1"
                    Width="112"
                    Height="112"
                    Margin="336,616,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    MouseDown="UIElement_Interaction"
                    Source="/Images/Keyboard/keyboardBetplay/btn_1.png"
                    Tag="1" />

                <Image
                    Name="btn2"
                    Width="112"
                    Height="112"
                    Margin="0,616,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    MouseDown="UIElement_Interaction"
                    Source="/Images/keyboard/keyboardBetplay/btn_2.png"
                    Tag="2" />

                <Image
                    Name="btn3"
                    Width="112"
                    Height="112"
                    Margin="632,616,336,0"
                    VerticalAlignment="Top"
                    MouseDown="UIElement_Interaction"
                    Source="/Images/keyboard/keyboardBetplay/btn_3.png"
                    Tag="3" />

                <Image
                    Name="btn4"
                    Width="112"
                    Height="112"
                    Margin="337,482,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    MouseDown="UIElement_Interaction"
                    RenderTransformOrigin="0.5,0.616"
                    Source="/Images/keyboard/keyboardBetplay/btn_4.png"
                    Tag="4" />

                <Image
                    Name="btn5"
                    Width="112"
                    Height="112"
                    Margin="0,482,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    MouseDown="UIElement_Interaction"
                    Source="/Images/keyboard/keyboardBetplay/btn_5.png"
                    Tag="5" />

                <Image
                    Name="btn6"
                    Height="112"
                    Margin="632,482,336,0"
                    VerticalAlignment="Top"
                    MouseDown="UIElement_Interaction"
                    Source="/Images/keyboard/keyboardBetplay/btn_6.png"
                    Tag="6" />

                <Image
                    Name="btn7"
                    Height="112"
                    Margin="336,354,632,0"
                    VerticalAlignment="Top"
                    MouseDown="UIElement_Interaction"
                    Source="/Images/keyboard/keyboardBetplay/btn_7.png"
                    Tag="7" />

                <Image
                    Name="btn8"
                    Width="112"
                    Height="112"
                    Margin="488,354,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    MouseDown="UIElement_Interaction"
                    Source="/Images/keyboard/keyboardBetplay/btn_8.png"
                    Tag="8" />

                <Image
                    Name="btn9"
                    Width="112"
                    Height="112"
                    Margin="632,354,336,0"
                    VerticalAlignment="Top"
                    MouseDown="UIElement_Interaction"
                    Source="/Images/keyboard/keyboardBetplay/btn_9.png"
                    Tag="9" />

                <Image
                    Name="btnBorrar"
                    Width="112"
                    Height="112"
                    Margin="336,750,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    MouseDown="UIElement_Interaction"
                    Source="/Images/keyboard/keyboardBetplay/btn_borrar.png"
                    Tag="Borrar" />

                <Image
                    Name="btnVolverUno"
                    Width="112"
                    Height="112"
                    Margin="634,750,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    MouseDown="UIElement_Interaction"
                    Source="/Images/keyboard/keyboardBetplay/btn_volver_uno.png"
                    Tag="All" />


                <TextBox
                    x:Name="TxtMonto"
                    Width="604"
                    Height="58"
                    Margin="0,270,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontFamily="Tahoma"
                    FontSize="40"
                    GotFocus="focusTxtvalidar"
                    IsReadOnly="true"
                    IsReadOnlyCaretVisible="False"
                    LostFocus="TxtVal_LostFocus"
                    RenderTransformOrigin="0.5,0.5"
                    Text="{Binding Val, StringFormat={}{0:C0}, UpdateSourceTrigger=PropertyChanged}"
                    TextAlignment="Center"
                    TextChanged="txtVal_TextChanged"
                    TextWrapping="Wrap" />



            </Grid>

            <Grid Grid.Row="2">

                <Image
                    Name="btnCancelar"
                    Width="346"
                    Height="101"
                    Margin="129,43,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    MouseDown="UIElement_Interaction"
                    Source="/Images/Buttons/btnCancelar.png" />

                <Image
                    Name="btnContinuar"
                    Width="346"
                    Height="101"
                    Margin="610,47,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    MouseDown="UIElement_Interaction"
                    Source="/Images/Buttons/btnContinuar.png" />

                <Image
                    Width="710"
                    Height="114"
                    Margin="0,247,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Source="/Images/Others/ico_atencion_cliente.png" />

            </Grid>

        </Grid>
    </Viewbox>
</local:AppUserControl>
