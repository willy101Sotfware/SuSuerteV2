<local:AppUserControl
    x:Class="SuSuerteV2.Presentation.UserControls.BetPlay.LoginUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SuSuerteV2.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="1920"
    d:DesignWidth="1080"
    Unloaded="UserControl_Unloaded"
    mc:Ignorable="d">
    <Viewbox Stretch="Uniform">
        <Grid Width="1080" Height="1920">
            <Grid.Background>
                <ImageBrush ImageSource="{StaticResource FONDO}" Stretch="Uniform" />
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="500" />
                <RowDefinition Height="*" />
                <RowDefinition Height="400" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <StackPanel
                    Name="btnAtras"
                    Margin="10,0,842,303"
                    MouseDown="UIElement_Interaction">
                    <Image
                        Width="109"
                        Height="105"
                        Margin="64,40,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Source="{StaticResource BtnAtrasBetplay}" />

                    <TextBlock
                        Margin="0,5,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="Atrás" />
                </StackPanel>

                <Image
                    Width="672"
                    Height="124"
                    Margin="0,345,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Source="/Images/Others/txt_si_ya_eres_usuario.png" />

                <TextBlock
                    x:Name="tbTimer"
                    Width="89"
                    Height="53"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    FontSize="35"
                    Foreground="White" />
            </Grid>

            <Grid
                Grid.Row="1"
                Grid.RowSpan="2"
                Margin="10,5,-10,395">
                <Image
                    Width="516"
                    Height="46"
                    Margin="272,195,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="/Images/Others/txt_confirmar_numero_cedula-13.png" />

                <Image
                    Width="606"
                    Height="37"
                    Margin="284,10,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="/Images/Others/txt_ingrese_numero_cedula.png" />

                <!--  TECLADO NUMÉRICO  -->
                <Image
                    Name="btn0"
                    Width="112"
                    Height="112"
                    Margin="0,750,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    MouseDown="UIElement_Interaction"
                    Source="/Images/Keyboard/keyboardBetplay/btn_0.png"
                    Tag="0" />

                <Image
                    Name="btn1"
                    Width="112"
                    Height="112"
                    Margin="336,616,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    MouseDown="UIElement_Interaction"
                    Source="/Images/Keyboard/keyboardBetplay/btn_1.png"
                    Tag="1" />

                <Image
                    Name="btn2"
                    Width="112"
                    Height="112"
                    Margin="0,616,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    MouseDown="UIElement_Interaction"
                    Source="/Images/keyboard/keyboardBetplay/btn_2.png"
                    Tag="2" />

                <Image
                    Name="btn3"
                    Width="112"
                    Height="112"
                    Margin="632,616,336,0"
                    VerticalAlignment="Top"
                    MouseDown="UIElement_Interaction"
                    Source="/Images/keyboard/keyboardBetplay/btn_3.png"
                    Tag="3" />

                <Image
                    Name="btn4"
                    Width="112"
                    Height="112"
                    Margin="337,482,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    MouseDown="UIElement_Interaction"
                    RenderTransformOrigin="0.5,0.616"
                    Source="/Images/keyboard/keyboardBetplay/btn_4.png"
                    Tag="4" />

                <Image
                    Name="btn5"
                    Width="112"
                    Height="112"
                    Margin="0,482,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    MouseDown="UIElement_Interaction"
                    Source="/Images/keyboard/keyboardBetplay/btn_5.png"
                    Tag="5" />

                <Image
                    Name="btn6"
                    Height="112"
                    Margin="632,482,336,0"
                    VerticalAlignment="Top"
                    MouseDown="UIElement_Interaction"
                    Source="/Images/keyboard/keyboardBetplay/btn_6.png"
                    Tag="6" />

                <Image
                    Name="btn7"
                    Height="112"
                    Margin="336,354,632,0"
                    VerticalAlignment="Top"
                    MouseDown="UIElement_Interaction"
                    Source="/Images/keyboard/keyboardBetplay/btn_7.png"
                    Tag="7" />

                <Image
                    Name="btn8"
                    Width="112"
                    Height="112"
                    Margin="488,354,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    MouseDown="UIElement_Interaction"
                    Source="/Images/keyboard/keyboardBetplay/btn_8.png"
                    Tag="8" />

                <Image
                    Name="btn9"
                    Width="112"
                    Height="112"
                    Margin="632,354,336,0"
                    VerticalAlignment="Top"
                    MouseDown="UIElement_Interaction"
                    Source="/Images/keyboard/keyboardBetplay/btn_9.png"
                    Tag="9" />

                <Image
                    Name="btnBorrar"
                    Width="112"
                    Height="112"
                    Margin="336,750,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    MouseDown="UIElement_Interaction"
                    Source="/Images/keyboard/keyboardBetplay/btn_borrar.png"
                    Tag="Borrar" />

                <Image
                    Name="btnVolverUno"
                    Width="112"
                    Height="112"
                    Margin="634,750,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    MouseDown="UIElement_Interaction"
                    Source="/Images/keyboard/keyboardBetplay/btn_volver_uno.png"
                    Tag="All" />

                <Image
                    Name="btnCancelar"
                    Width="228"
                    Height="78"
                    Margin="254,915,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    MouseDown="UIElement_Interaction"
                    Source="/Images/Buttons/btnCancelar.png" />

                <Image
                    Name="btnContinuar"
                    Height="78"
                    Margin="598,915,254,0"
                    VerticalAlignment="Top"
                    MouseDown="UIElement_Interaction"
                    Source="/Images/Buttons/btnContinuar.png" />

                <!--  TEXTBOXES  -->
                <TextBox
                    x:Name="TxtCedula"
                    Width="660"
                    Height="64"
                    Margin="196,76,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    BorderBrush="{x:Null}"
                    FontFamily="Tahoma"
                    FontSize="45"
                    Foreground="Gray"
                    GotFocus="focusTxtCedula"
                    IsReadOnly="True"
                    IsReadOnlyCaretVisible="False"
                    LostFocus="TxtNumCel_LostFocus"
                    Tag="Cedula"
                    Text="Número de cédula"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />

                <TextBox
                    x:Name="TxtValidate"
                    Height="64"
                    Margin="196,263,224,0"
                    VerticalAlignment="Top"
                    BorderBrush="{x:Null}"
                    FontFamily="Tahoma"
                    FontSize="45"
                    Foreground="Gray"
                    GotFocus="focusTxtvalidar"
                    IsReadOnly="True"
                    IsReadOnlyCaretVisible="False"
                    LostFocus="TxtVal_LostFocus"
                    Tag="Validate"
                    Text="Confirmar"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
            </Grid>

            <Grid Grid.Row="2">
                <Image
                    Width="616"
                    Height="126"
                    Margin="0,42,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Source="/Images/Others/txt_sr_usuario.png" />

                <Image
                    Width="710"
                    Height="114"
                    Margin="0,247,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Source="/Images/Others/ico_atencion_cliente.png" />
            </Grid>
        </Grid>
    </Viewbox>
</local:AppUserControl>