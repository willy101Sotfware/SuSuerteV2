<local:AppUserControl x:Class="SuSuerteV2.Presentation.UserControls.BetPlay.PaymentBetplayUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SuSuerteV2.UserControls"
             mc:Ignorable="d" 
            d:DesignHeight="1920" d:DesignWidth="1080">
    <Viewbox Stretch="Uniform">
        <Grid Width="1080" Height="1920">
            <Grid.Background>
                <ImageBrush ImageSource="/Images/Backgrounds/back_betplay.png"/>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="550" />
                <RowDefinition Height="50" />
                <RowDefinition Height="500" />
                <RowDefinition Height="400" />
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid
             Grid.Row="0">



                <Image Source="/Images/Others/LogoBetplay.png"
               HorizontalAlignment="Center"     
               VerticalAlignment="Top" Height="136" Width="276" Margin="0,250,0,0"/>

                <Image Source="/Images/Others/txt_ingresa_dinero.png"
               HorizontalAlignment="Center"     
               VerticalAlignment="Top" Height="82" Width="416" Margin="0,407,0,0"/>

                <Image Source="/Images/Others/linea_yellow_division.png"
                HorizontalAlignment="Center"     
                VerticalAlignment="Top" Height="16" Width="660" Margin="0,488,0,0"/>



                <TextBlock 
                 x:Name="tbTimer"
                 FontSize="45"
                 Foreground="White"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Top"
                 Margin="0,10,35,0" Height="60" Width="126" Grid.Column="1"/>

            </Grid>


            <Grid Grid.Row="1">
                <TextBlock 
                 Text="DENOMINACION"
                 FontSize="35"
                 TextAlignment="Center"
                 Margin="130,0,0,0"
                 FontFamily="Myriad Pro"
                 FontWeight="Bold"
                 Foreground="White"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Left" />

                <TextBlock 
                 Text="CANTIDAD"
                 FontSize="35"
                 TextAlignment="Center"
                 Margin="70,0,0,0"
                 FontFamily="Myriad Pro"
                 FontWeight="Bold"
                 Foreground="White"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Center" />

                <TextBlock 
                 Text="TOTAL($)"
                 FontSize="35"
                 TextAlignment="Center"
                 Margin="0,0,130,0"
                 FontFamily="Myriad Pro"
                 FontWeight="Bold"
                 Foreground="White"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Right" />
            </Grid>

            <Grid Grid.Row="2" Margin="0,0,0,0">
                <ListView x:Name="lv_denominations"
                         Background="Transparent"
                         BorderBrush="Transparent"
                         HorizontalAlignment="Center" 
                         VerticalAlignment="Top"
                         ItemsSource="{Binding}" Height="490" Width="820">

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="1"
                                      HorizontalAlignment="Center"
                                          VerticalAlignment="Top"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid HorizontalAlignment="Center"
                                 VerticalAlignment="Top" Background="Transparent"
                                 Margin="0,0,0,0"
                                 Width="800"
                                 Height="50"
                       >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250" />
                                    <ColumnDefinition Width="300" />
                                    <ColumnDefinition Width="300" />
                                </Grid.ColumnDefinitions>
                                <TextBlock 
                             Text="{Binding Denominacion, StringFormat={}{0:C0}}"
                             FontSize="38"
                             FontFamily="Myriad Pro"
                             TextAlignment="Center"
                             TextWrapping="Wrap"
                             Margin="0,0,30,0"
                             Foreground="#f3e71f"
                            
                             VerticalAlignment="Center"
                             HorizontalAlignment="Center"
                             Grid.Column="0"
                    />
                                <TextBlock 
                             Text="{Binding Quantity}"
                             FontSize="38"
                              FontFamily="Myriad Pro"
                             TextAlignment="Center"
                             TextWrapping="Wrap"
                             Margin="50,0,0,0"
                            
                              Foreground="#f3e71f"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Center"
                             FontWeight="Bold"
                             Grid.Column="1"
                    />
                                <TextBlock 
                             Text="{Binding Total, StringFormat={}{0:C0}}"
                              FontSize="38"
                             FontFamily="Myriad Pro"
                             TextAlignment="Center"
                             TextWrapping="Wrap"
                             Margin="0,0,0,0"
                           
                              Foreground="#f3e71f"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Center"
                             FontWeight="Bold"
                             Grid.Column="2" 
                    />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>



            <Grid
         
         Grid.Row="3">





                <Image Source="/Images/Others/txt_valor_total_yellow.png"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" Height="36" Width="293" Margin="198,300,0,0"/>

                <Image Source="/Images/Others/TxtValorI.png"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" Height="36" Width="293" Margin="198,40,0,0"/>

                <Image Source="/Images/Others/TxtValorF.png"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" Height="27" Width="257" Margin="198,120,0,0"/>

                <Image Source="/Images/Others/TxtSobrante.png"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" Height="26" Width="257" Margin="198,200,0,0"/>



                <TextBlock 
             Text="{Binding ValorIngresado, StringFormat={}{0:C0}}"
             FontSize="40"
             TextAlignment="Center"
             Margin="0,40,220,0"
             FontFamily="Arial"
             Foreground="White"
             FontWeight="Bold"
             VerticalAlignment="Top"
             HorizontalAlignment="Right" RenderTransformOrigin="0.535,0.548" Width="198"
          >
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="1"/>
                            <SkewTransform/>
                            <RotateTransform Angle="-359.549"/>
                            <TranslateTransform X="-0.016" Y="-0.185"/>
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>

                <TextBlock 
             Text="{Binding ValorFaltante, StringFormat={}{0:C0}}"
             FontSize="35"
             TextAlignment="Center"
             Margin="0,120,224,0"
             FontFamily="Arial"
             Foreground="White"
             FontWeight="Bold"
             VerticalAlignment="Top"
             HorizontalAlignment="Right" Width="200"
          />

                <TextBlock 
             Text="{Binding ValorSobrante, StringFormat={}{0:C0}}"
             FontSize="35"
             TextAlignment="Center"
             Margin="0,200,224,0"
             FontFamily="Arial"
             Foreground="White"
             FontWeight="Bold"
             VerticalAlignment="Top"
             HorizontalAlignment="Right" Width="200"/>

                <TextBlock 
             Text="{Binding PayValue, StringFormat={}{0:C0}}"
             FontSize="35"
             TextAlignment="Center"
             Margin="0,300,225,0"
             FontFamily="Arial"
             Foreground="White"
             FontWeight="Bold"
             VerticalAlignment="Top"
             HorizontalAlignment="Right" RenderTransformOrigin="0.5,0.5" Width="200"
          >
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="1"/>
                            <SkewTransform/>
                            <RotateTransform Angle="359.991"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>


            </Grid>

            <Grid
            
             Grid.Row="4">

                <Image Source="/Images/Buttons/btnCancelar.png" 
      
                   HorizontalAlignment="Center"   
                   Name="BtnCancel"
                   Visibility="{Binding ImgCancel}"
                   MouseDown="UIElement_Interaction"
                   VerticalAlignment="Top" Height="92" Width="336" Margin="0,32,0,0"/>

                <Image Source="/Images/Others/ico_atencion_cliente.png"
                    HorizontalAlignment="Center"              
                    VerticalAlignment="Top" Height="114" Width="710" Margin="0,247,0,0"/>

            </Grid>

        </Grid>
    </Viewbox>
</local:AppUserControl>
