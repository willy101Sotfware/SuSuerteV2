<local:AppUserControl
    x:Class="SuSuerteV2.Presentation.UserControls.BetPlay.PaymentBetplayUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SuSuerteV2.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="1920"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <Viewbox Stretch="Uniform">
        <Grid Width="1080" Height="1920">
            <Grid.Background>
                <ImageBrush ImageSource="/Images/Backgrounds/back_betplay.png" />
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="550" />
                <RowDefinition Height="50" />
                <RowDefinition Height="500" />
                <RowDefinition Height="400" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">



                <Image
                    Width="276"
                    Height="136"
                    Margin="0,250,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Source="/Images/Others/LogoBetplay.png" />

                <Image
                    Width="416"
                    Height="82"
                    Margin="0,407,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Source="/Images/Others/txt_ingresa_dinero.png" />

                <Image
                    Width="660"
                    Height="16"
                    Margin="0,488,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Source="/Images/Others/linea_yellow_division.png" />



                <TextBlock
                    x:Name="tbTimer"
                    Grid.Column="1"
                    Width="126"
                    Height="60"
                    Margin="0,10,35,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    FontSize="45"
                    Foreground="White" />

            </Grid>


            <Grid Grid.Row="1">
                <TextBlock
                    Margin="130,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontFamily="Myriad Pro"
                    FontSize="35"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="DENOMINACION"
                    TextAlignment="Center" />

                <TextBlock
                    Margin="70,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontFamily="Myriad Pro"
                    FontSize="35"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="CANTIDAD"
                    TextAlignment="Center" />

                <TextBlock
                    Margin="0,0,130,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    FontFamily="Myriad Pro"
                    FontSize="35"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="TOTAL($)"
                    TextAlignment="Center" />
            </Grid>

            <Grid Grid.Row="2" Margin="0,0,0,0">
                <ListView
                    x:Name="lv_denominations"
                    Width="820"
                    Height="490"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    ItemsSource="{Binding}">

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Columns="1" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid
                                Width="800"
                                Height="50"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Background="Transparent">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="250" />
                                    <ColumnDefinition Width="300" />
                                    <ColumnDefinition Width="300" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    Margin="0,0,30,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="Myriad Pro"
                                    FontSize="38"
                                    Foreground="#f3e71f"
                                    Text="{Binding Denominacion, StringFormat={}{0:C0}}"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap" />
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="50,0,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="Myriad Pro"
                                    FontSize="38"
                                    FontWeight="Bold"
                                    Foreground="#f3e71f"
                                    Text="{Binding Quantity}"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap" />
                                <TextBlock
                                    Grid.Column="2"
                                    Margin="0,0,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="Myriad Pro"
                                    FontSize="38"
                                    FontWeight="Bold"
                                    Foreground="#f3e71f"
                                    Text="{Binding Total, StringFormat={}{0:C0}}"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>



            <Grid Grid.Row="3">





                <Image
                    Width="293"
                    Height="36"
                    Margin="198,300,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="/Images/Others/txt_valor_total_yellow.png" />

                <Image
                    Width="293"
                    Height="36"
                    Margin="198,40,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="/Images/Others/TxtValorI.png" />

                <Image
                    Width="257"
                    Height="27"
                    Margin="198,120,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="/Images/Others/TxtValorF.png" />

                <Image
                    Width="257"
                    Height="26"
                    Margin="198,200,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="/Images/Others/TxtSobrante.png" />



                <TextBlock
                    Width="198"
                    Margin="0,40,220,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    FontFamily="Arial"
                    FontSize="40"
                    FontWeight="Bold"
                    Foreground="White"
                    RenderTransformOrigin="0.535,0.548"
                    Text="{Binding ValorIngresado, StringFormat={}{0:C0}}"
                    TextAlignment="Center">
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="1" />
                            <SkewTransform />
                            <RotateTransform Angle="-359.549" />
                            <TranslateTransform X="-0.016" Y="-0.185" />
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>

                <TextBlock
                    Width="200"
                    Margin="0,120,224,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    FontFamily="Arial"
                    FontSize="35"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="{Binding ValorFaltante, StringFormat={}{0:C0}}"
                    TextAlignment="Center" />

                <TextBlock
                    Width="200"
                    Margin="0,200,224,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    FontFamily="Arial"
                    FontSize="35"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="{Binding ValorSobrante, StringFormat={}{0:C0}}"
                    TextAlignment="Center" />

                <TextBlock
                    Width="200"
                    Margin="0,300,225,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    FontFamily="Arial"
                    FontSize="35"
                    FontWeight="Bold"
                    Foreground="White"
                    RenderTransformOrigin="0.5,0.5"
                    Text="{Binding PayValue, StringFormat={}{0:C0}}"
                    TextAlignment="Center">
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="1" />
                            <SkewTransform />
                            <RotateTransform Angle="359.991" />
                            <TranslateTransform />
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>


            </Grid>

            <Grid Grid.Row="4">

                <Image
                    Name="BtnCancel"
                    Width="336"
                    Height="92"
                    Margin="0,32,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    MouseDown="UIElement_Interaction"
                    Source="/Images/Buttons/btnCancelar.png"
                    Visibility="{Binding ImgCancel}" />

                <Image
                    Width="710"
                    Height="114"
                    Margin="0,247,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Source="/Images/Others/ico_atencion_cliente.png" />

            </Grid>

        </Grid>
    </Viewbox>
</local:AppUserControl>
