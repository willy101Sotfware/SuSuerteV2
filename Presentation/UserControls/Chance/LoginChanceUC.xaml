             VerticalAlignment="Top" 
             Height="91" 
             Width="670"/>

            <local2:EmailTextbox   
             x:Name="txtEmailForm" 
                FontSize="40"
                TextAlignment="Center"
                TextWrapping="Wrap"
                FontWeight="Bold"
                Text=""
                IsReadOnly="True"
                IsReadOnlyCaretVisible="False"
                VerticalContentAlignment="Center"                  
                Margin="210,1131,216,724" BorderBrush="{x:Null}"
