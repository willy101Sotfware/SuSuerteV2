             Height="91" 
             Width="670"/>

            <local2:NumericBox  x:Name="txtCelularForm" 
                FontSize="40"   
                FontWeight="Bold"
                Text=""
                Margin="210,854,216,997"
                TextWrapping="Wrap"
                VerticalContentAlignment="Center"
