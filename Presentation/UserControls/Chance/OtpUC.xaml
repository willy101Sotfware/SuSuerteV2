<local:AppUserControl x:Class="SuSuerteV2.Presentation.UserControls.Chance.OtpUC"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:local="clr-namespace:SuSuerteV2.UserControls"
                      mc:Ignorable="d"
                      d:DesignHeight="450" d:DesignWidth="800">
    <Viewbox Stretch="Uniform">
        <Grid Width="1080" Height="1920">

            <Grid.Background>
                <ImageBrush ImageSource="/Images/Backgrounds/bgGray.png"/>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="500"/>
                <RowDefinition Height="*" />
                <RowDefinition Height="400" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">

                <Image Source="/Images/Others/TxtDigiteOTP.png"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top" Height="181" Width="662" Margin="0,284,0,0"/>

                <TextBlock
                    x:Name="tbTimer"
                    FontSize="45"
                    Foreground="White"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,10,0,0" Height="60" Width="126"/>

            </Grid>

            <Grid Grid.Row="1">

                <Image Source="/Images/backgrounds/BgNums.png"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" Height="922" Width="733" Margin="178,52,0,0" RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="0.353"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>


                <TextBlock Name="TxtOTP"
                           FontSize="55"
                           FontWeight="Bold"
                           TextAlignment="Center"
                           Margin="247,154,247,794"
                           Background="White"
                           />

                <Image Source="/Images/keyboard/0.png"
                       HorizontalAlignment="Center"
                       TouchDown="Keyboard_TouchDown"
                       Tag="0"
                       VerticalAlignment="Top" Height="118" Width="126" Margin="0,776,0,0"/>

                <Image Source="/Images/keyboard/1.png"
                       HorizontalAlignment="Left"
                       TouchDown="Keyboard_TouchDown"
                       Tag="1"
                       VerticalAlignment="Top" Height="117" Width="127" Margin="294,626,0,0"/>

                <Image Source="/Images/keyboard/2.png"
                       HorizontalAlignment="Center"
                       TouchDown="Keyboard_TouchDown"
                       Tag="2"
                       VerticalAlignment="Top" Height="117" Width="126" Margin="0,626,0,0"/>

                <Image Source="/Images/keyboard/3.png"
                       HorizontalAlignment="Left"
                       TouchDown="Keyboard_TouchDown"
                       Tag="3"
                       VerticalAlignment="Top" Height="117" Width="127" Margin="659,626,0,0"/>

                <Image Source="/Images/keyboard/4.png"
                       HorizontalAlignment="Left"
                       TouchDown="Keyboard_TouchDown"
                       Tag="4"
                       VerticalAlignment="Top" Height="116" Width="127" Margin="294,477,0,0"/>

                <Image Source="/Images/keyboard/5.png"
                       HorizontalAlignment="Left"
                       TouchDown="Keyboard_TouchDown"
                       Tag="5"
                       VerticalAlignment="Top" Height="118" Width="126" Margin="481,476,0,0"/>

                <Image Source="/Images/keyboard/6.png"
                       HorizontalAlignment="Left"
                       TouchDown="Keyboard_TouchDown"
                       Tag="6"
                       VerticalAlignment="Top" Height="118" Width="127" Margin="659,476,0,0"/>

                <Image Source="/Images/keyboard/7.png"
                       TouchDown="Keyboard_TouchDown"
                       HorizontalAlignment="Left"
                       Tag="7"
                       VerticalAlignment="Top" Height="117" Width="127" Margin="293,324,0,0"/>

                <Image Source="/Images/keyboard/8.png"
                       HorizontalAlignment="Left"
                       Tag="8"
                       TouchDown="Keyboard_TouchDown"
                       VerticalAlignment="Top" Height="117" Width="127" Margin="474,324,0,0"/>

                <Image Source="/Images/keyboard/9.png"
                       HorizontalAlignment="Left"
                       Tag="9"
                       TouchDown="Keyboard_TouchDown"
                       VerticalAlignment="Top" Height="117" Width="127" Margin="659,324,0,0"/>

                <Image Source="/Images/keyboard/Borrar.png"
                       HorizontalAlignment="Left"
                       Tag="Borrar"
                       TouchDown="Btn_DeleteTouchDown"
                       VerticalAlignment="Top" Height="118" Width="127" Margin="294,776,0,0"/>

                <Image Source="/Images/keyboard/Clearall.png"
                       HorizontalAlignment="Left"
                       TouchDown="Btn_DeleteAllTouchDown"
                       Tag="All"
                       VerticalAlignment="Top" Height="118" Width="127" Margin="664,776,0,0"/>






            </Grid>

            <Grid Grid.Row="2">

                <Image
                    Source="/Images/Buttons/BtnContinuar.png"
                    Margin="604,123,168,180"
                    TouchDown="BtnContinuar"/>
                <Image
                    Source="/Images/Buttons/BtnCancelar.png"
                    Margin="151,106,621,164"
                    TouchDown="BtnCancelar"/>


            </Grid>

        </Grid>
    </Viewbox>
</local:AppUserControl>
