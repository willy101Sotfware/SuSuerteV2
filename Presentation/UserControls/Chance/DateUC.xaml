<local:AppUserControl x:Class="SuSuerteV2.Presentation.UserControls.Chance.DateUC"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:local="clr-namespace:SuSuerteV2.UserControls"
                      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                      mc:Ignorable="d"
                      d:DesignHeight="1920" d:DesignWidth="1080">
    <UserControl.Resources>
        <Style x:Key="DesignView"
               TargetType="ListViewItem"
               >
            <EventSetter Event="TouchDown"
                         Handler="BtnSelectLottery"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="StyleBorder">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="StyleBorder"
                                        Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Viewbox Stretch="Uniform">
        <Grid Width="1080" Height="1920">
            <Grid.Background>
                <ImageBrush ImageSource="/Images/Backgrounds/bgGray.png"/>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="400"/>
                <RowDefinition Height="*" />
                <RowDefinition Height="300" />
            </Grid.RowDefinitions>

            <TextBlock
                x:Name="tbTimer"
                FontSize="45"
                Foreground="White"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,10,510,0" Height="60" Width="126"/>


            <Grid
                Grid.Row="0">



                <Image Source="/Images/Others/txt_Apuesta.png"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" Width="254" Height="78" Margin="0,272,0,0"/>

                <Image
                    Source="/Images/Buttons/btnatras.png"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top" Height="102" Width="92" Margin="76,80,0,0"
                    TouchDown="BtnAtras"
                    />
            </Grid>

            <Grid
                Grid.Row="1">
                <Image Source="/Images/Others/txtApuesta1.png"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" Width="224" Height="54" Margin="155,64,0,0"/>


                <Image Source="/Images/Others/trazo_yellow.png"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" Width="824" Height="7" Margin="155,120,0,0"/>

                <Image Source="/Images/Others/iconoapuesta_minima.png"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" Width="212" Height="56" Margin="777,53,0,0"/>

                <Image Source="/Images/Others/circulo_1.png"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" Width="60" Height="56" Margin="155,155,0,0"/>

                <Image Source="/Images/Others/txt_selecciona_fecha.png" Width="356" Margin="247,140,477,995"/>


                <Image Source="/Images/Backgrounds/bgNoSelectDia.png"
                       x:Name="bgDia1"
                       Tag="fecha1"
                       TouchDown="SelectDay"
                       VerticalAlignment="Top" Width="228" Height="247" Margin="183,243,669,0"/>

                <Image Source="/Images/Backgrounds/bgNoSelectDia.png"
                       x:Name="bgDia2"
                       Tag="fecha2"
                       TouchDown="SelectDay"
                       VerticalAlignment="Top" Width="228" Height="247" Margin="453,243,399,0"/>

                <Image Source="/Images/Backgrounds/bgNoSelectDia.png"
                       x:Name="bgDia3"
                       Tag="fecha3"
                       TouchDown="SelectDay"
                       VerticalAlignment="Top" Width="228" Height="247" Margin="718,243,134,0"/>


                <Image Source="/Images/Others/txtDia.png"
                       HorizontalAlignment="Left"
                       Tag="fecha1"
                       TouchDown="SelectDay"
                       VerticalAlignment="Top" Width="75" Height="38" Margin="260,256,0,0"/>

                <Label Content="Hoy"
                       Tag="fecha1"
                       TouchDown="SelectDay"
                       HorizontalAlignment="Left"
                       Margin="208,299,0,0"
                       VerticalAlignment="Top"
                       HorizontalContentAlignment="Center"
                       Height="90"
                       x:Name="dia_mes1"
                       Width="178"
                       Foreground="White"
                       FontSize="60"
                       FontFamily="Yu Gothic UI Semibold"/>

                <Label Content=""
                       Tag="fecha1"
                       TouchDown="SelectDay"
                       HorizontalAlignment="Left"
                       Margin="208,414,0,0"
                       VerticalAlignment="Top"
                       Height="62"
                       HorizontalContentAlignment="Center"
                       x:Name="mes_ano1"
                       Width="178"
                       Foreground="White"
                       FontSize="35"
                       FontFamily="Yu Gothic UI Semibold"/>

                <Image Source="/Images/Others/txtDia.png"
                       HorizontalAlignment="Left"
                       Tag="fecha2"
                       TouchDown="SelectDay"
                       VerticalAlignment="Top" Width="75" Height="38" Margin="530,256,0,0"/>

                <Label Content=""
                       Tag="fecha2"
                       TouchDown="SelectDay"
                       HorizontalAlignment="Left"
                       Margin="479,299,0,0"
                       VerticalAlignment="Top"
                       HorizontalContentAlignment="Center"
                       Height="90"
                       x:Name="dia_mes2"
                       Width="176"
                       Foreground="White"
                       FontSize="60"
                       FontFamily="Yu Gothic UI Semibold"/>

                <Label Content=""
                       Tag="fecha2"
                       TouchDown="SelectDay"
                       HorizontalAlignment="Left"
                       Margin="479,414,0,0"
                       VerticalAlignment="Top"
                       Height="62"
                       HorizontalContentAlignment="Center"
                       x:Name="mes_ano2"
                       Width="176"
                       Foreground="White"
                       FontSize="35"
                       FontFamily="Yu Gothic UI Semibold"/>

                <Image Source="/Images/Others/txtDia.png"
                       HorizontalAlignment="Left"
                       Tag="fecha3"
                       TouchDown="SelectDay"
                       VerticalAlignment="Top" Width="75" Height="38" Margin="795,256,0,0"/>

                <Label Content=""
                       Tag="fecha3"
                       TouchDown="SelectDay"
                       HorizontalAlignment="Left"
                       Margin="744,299,0,0"
                       VerticalAlignment="Top"
                       HorizontalContentAlignment="Center"
                       Height="90"
                       x:Name="dia_mes3"
                       Width="176"
                       Foreground="White"
                       FontSize="60"
                       FontFamily="Yu Gothic UI Semibold"/>

                <Label Content=""
                       Tag="fecha3"
                       TouchDown="SelectDay"
                       HorizontalAlignment="Left"
                       Margin="744,414,0,0"
                       VerticalAlignment="Top"
                       Height="62"
                       HorizontalContentAlignment="Center"
                       x:Name="mes_ano3"
                       Width="176"
                       Foreground="White"
                       FontSize="35"
                       FontFamily="Yu Gothic UI Semibold"/>









                <materialDesign:TransitioningContent
                    OpeningEffectsOffset="{materialDesign:IndexedItemOffsetMultiplier 0:0:1.2}"
                    Name="btnMapSeats" Margin="213,642,202,50" RenderTransformOrigin="0.507,0.5">
                    <materialDesign:TransitioningContent.OpeningEffects>
                        <materialDesign:TransitionEffect Kind="SlideInFromBottom"  Duration="0:0:1.9"/>
                    </materialDesign:TransitioningContent.OpeningEffects>

                    <ListView
                        x:Name="lvLotteries"
                        Background="Transparent"
                        ItemContainerStyle="{DynamicResource DesignView}"
                        BorderBrush="{x:Null}"
                        ItemsSource="{Binding}"
                        SelectionMode="Multiple" Width="662" HorizontalAlignment="Left" Margin="10,7,0,-7">

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="4"
                                             VerticalAlignment="Top"
                                             HorizontalAlignment="Center"/>

                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid

                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="0,10,10,0"
                                    x:Name="LotterieSelected"
                                    Width="120"
                                    Height="162">

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="162" />
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0"
                                          x:Name="LotteriesSelected"
                                          >

                                        <Grid.Background>

                                            <ImageBrush
                                                ImageSource="{Binding ImageData}"
                                                Stretch="Fill"
                                                />
                                        </Grid.Background>

                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>

                    </ListView>
                </materialDesign:TransitioningContent>

                <Image Source="/Images/Others/trazo_yellow.png"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" Width="824" Height="8" Margin="155,512,0,0"/>
                <Image Source="/Images/Others/circulo_2.png"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" Width="60" Height="56" Margin="155,534,0,0"/>
                <Image Source="/Images/Others/txt_selecciona_las_loterias.png" Margin="243,534,451,625"/>


            </Grid>

            <Grid Grid.Row="2">
                <TextBlock
                    x:Name="txtValidaciones"
                    Text="*No ha seleccionado ninguna loteria"
                    TextAlignment="Center" Margin="92,0,92,228"
                    FontSize="30"
                    FontWeight="Bold"
                    Foreground="Red"
                    />
                <Image
                    Source="/Images/Buttons/BtnContinuar.png"
                    Margin="590,70,182,128"
                    TouchDown="BtnContinuar"/>
                <Image
                    Source="/Images/Buttons/BtnCancelar.png"
                    Margin="214,70,558,128"
                    TouchDown="BtnCancelar"/>


            </Grid>
        </Grid>
    </Viewbox>
</local:AppUserControl>
