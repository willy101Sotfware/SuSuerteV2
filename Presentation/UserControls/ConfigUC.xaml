<local:AppUserControl
    x:Class="SuSuerteV2.Presentation.UserControls.ConfigUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SuSuerteV2.UserControls"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="1920"
    d:DesignWidth="1080"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="{StaticResource BACKGENERIC}" Stretch="Uniform" />
        </Grid.Background>

        <TextBlock
            Width="900"
            Margin="0,450,0,0"
            Style="{StaticResource TitleStyle}"
            Text="CONFIGURACIÓN DEL DISPOSITIVO" />
        <TextBlock
            Margin="162,545,163,0"
            Style="{StaticResource MessageTextStyle}"
            Text="Espere mientras se configura el dispositivo para iniciar" />


        <mah:ProgressRing
            x:Name="LoadGif"
            Width="563"
            Height="589"
            Margin="0,895,0,0"
            Foreground="{StaticResource TERTIARYCOLOR}"
            IsActive="True"
            Style="{StaticResource ProgressRingStyle}" />

        <TextBlock
            x:Name="TxtStatus"
            Margin="0,1609,0,0"
            FontWeight="Bold"
            Foreground="{StaticResource PRIMARYCOLOR}"
            Style="{StaticResource MessageTextStyle}"
            Text="{Binding StatusMsg}" />
    </Grid>
</local:AppUserControl>